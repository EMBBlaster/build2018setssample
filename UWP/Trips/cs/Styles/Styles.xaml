<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Trips">

    <SolidColorBrush x:Key="AppBrandingBackgroundThemeBrush" Color="#008299" />
    <SolidColorBrush x:Key="AppBrandingSelectionThemeBrush" Color="#88008299" />

    <Style x:Key="ListItemTextStyle" TargetType="TextBlock" BasedOn="{StaticResource SubtitleTextBlockStyle}">
        <Setter Property="FontSize" Value="18"/>
        <Setter Property="Margin" Value="10,0,0,0"/>
        <Setter Property="Foreground" Value="{StaticResource SystemControlForegroundBaseHighBrush}"/>
    </Style>
</ResourceDictionary>
